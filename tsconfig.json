{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false
  },
  "include": [
    "./src/types/**.d.ts",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
